1.let/const/解构数组（就是）分解一个东西的结构
 eg:
 'use strict'
 function breakfast(){
 return [a,b,c];
 }
 let [dessert,drink,fruit]=breakfast();
 console.log(dessert,drink,fruit);
 
 2.解构对象
 eg:
 'use strict'
 function breakfast(){
 return {dessert:"cake",drink:"water",fruit:"apple"};
 }
 let {dessert:dessert,drink:drink,fruit:fruit}=breakfast();
 console.log(dessert,drink,fruit);
 
 3.模板字符串
 'use strict'
 let dessert="cake";
 let drink="water";
 let breakfast=`今天的早餐是+${dessert}+与+${drink}`;
 console.log(breakfast);
 4.带标签的模板字符串
  'use strict'
 let dessert="cake";
 let drink="water";
 let breakfast=kitchen `今天的早餐是+${dessert}+与+${drink}`;
 function kitchen(string,values)
 {
 console.log(string);//今天的早餐是，与，！
 console.log(values);//dessert跟drink
let result='';
for(var i=0;i<values.length;i++){
result+=string[i];
result+=values[i];}
result+=string[string.length-1];
 }    return result;
 console.log(result);
 
 
 
 
 
 5.判断字符串里是否包含其他字符串
 eg:
 'use strict'
 let dessert="cate",drink="water";
 breakfast= `今天的早餐是+${dessert}+与+${drink}`;
 console.log(
 breakfast.startsWith("今天"))；//true
 breakfast.endsWith("!");//true
 breakfast.include("dessert");//true
 
 
 
                                                  
6.默认参数
eg:
'use strict'
function breakfast(dessert='cake',drink='water')
{return `${dessert}与${drink}`}
breakfast(water,fruit);//water,fruit
breakfast();//cake,water

7.剩余操作符rest
1)let fruit=['apple','banana'],
   food=['orange',...fruit];
   console.log(food);//["orange", "apple", "banana"]
console.log(fruit)//["apple","banana"];

2)
console.log(...fruit)//apple banana
function breakfast(dessert,drink,...food)
{
console.log( dessert,drink,food);}
breakfast(cake,drink,apple,orange)//cake,drink,["apple","orange"];
breakfast(cake,drink,apple,orange);
console.log(dessert,drink,...food)//cake,drink,apple,orange



8.解构参数
function breakfast(dessert,drink,{location,restautant}={})
console.log(dessert,drink,location,restautant);
breakfast('cate','water',{location:"gd",restautant:"机关报"})
